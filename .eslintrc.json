{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["html"],
  "rules": {
    "no-console": "warn",
    "no-unused-vars": "warn",
    "no-undef": "error",
    "semi": ["error", "always"],
    "quotes": ["error", "single", { "avoidEscape": true }],
    "indent": ["error", 2],
    "no-var": "error",
    "prefer-const": "error",
    "eqeqeq": ["error", "always"],
    "no-alert": "warn"
  },
  "ignorePatterns": ["node_modules/", ".git/", "dist/", "build/"],
  "overrides": [
    {
      "files": ["scripts/**/*.js"],
      "env": {
        "node": true,
        "browser": false
      },
      "rules": {
        "no-console": "off"
      }
    },
    {
      "files": ["tests/**/*.js", "**/*.spec.js", "playwright.config.js", "test-*.js"],
      "env": {
        "node": true,
        "browser": true
      },
      "rules": {
        "no-console": "off",
        "no-unused-vars": "off"
      }
    },
    {
      "files": ["design-preview.html", "simple_test.html", "test_buttons.html", "index.html"],
      "rules": {
        "no-alert": "off",
        "no-console": "off",
        "indent": "off"
      }
    },
    {
      "files": ["test_buttons.html"],
      "rules": {
        "no-unused-vars": "off"
      }
    }
  ]
}
